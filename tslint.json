{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      false,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "member-access": [
      true,
      "no-public"
    ],
    "max-classes-per-file": false,
    "variable-name": false,
    "trailing-comma": false,
    "prefer-const": false,
    "member-ordering": false,
    "arrow-parens": false
  }
}
